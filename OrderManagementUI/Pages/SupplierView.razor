
@page "/supplierview"
@inject NavigationManager UriHelper

<h1 class="page-title">Suppliers</h1>

@if (Suppliers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                @*<th></th>*@
                <th>Name</th>
                <th>City</th>
               @* <th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Suppliers)
            {
            <tr>
                <td>@supplier.Name</td>
                <td>@supplier.City</td>
                 <td class="align-middle">
                    <a class="btn btn-info" href="@($"supplierdetails/{supplier.Id}")" role="button">Details</a>
                </td>
                <td class="align-middle">
                    <a class="btn btn-info" href="@($"supplierupdate/{supplier.Id}")" role="button">Update</a>
                </td>
                @*<td class="align-middle">
                    <button type="button" class="btn btn-danger" >Delete</button>
                </td>*@
            </tr>
            }
        </tbody>
    </table>
}
